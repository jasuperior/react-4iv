{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./public",
        "jsx": "react",
        "lib": ["es6", "dom", "es2016", "es2017"]
    },
    "include": ["lib"],
    "exclude": ["node_modules", "**/tests/*"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true
}
